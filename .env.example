# ============================================
# VOLKOS BOT - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# Required variables MUST be set, optional have defaults

# ============================================
# TELEGRAM CONFIGURATION (REQUIRED)
# ============================================
# Get from @BotFather on Telegram
TELEGRAM_TOKEN=your_bot_token_here

# Your Telegram User ID (owner/admin)
# Get from @userinfobot on Telegram
TELEGRAM_ADMIN_ID=123456789

# ============================================
# DATABASE CONFIGURATION (REQUIRED)
# ============================================
# Upstash Redis Database
# Sign up at: https://upstash.com/
UPSTASH_REDIS_REST_URL=https://your-database.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_token_here

# ============================================
# EMAIL ENCRYPTION (REQUIRED for Fix Nomor)
# ============================================
# 32-character hex string for AES-256-CBC encryption
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
EMAIL_ENCRYPTION_KEY=your_32_character_encryption_key_here_64hex

# ============================================
# SYSTEM CONFIGURATION (OPTIONAL)
# ============================================
# Default trial duration in days (default: 1)
DEFAULT_TRIAL_DAYS=1

# Debug mode - shows detailed logs (default: false)
DEBUG=false

# ============================================
# WELCOME THUMBNAILS (OPTIONAL)
# ============================================
# Custom thumbnail images for welcome messages
# Leave empty to use default images

# Owner welcome thumbnail
THUMBNAIL_WELCOME_OWNER=

# User welcome thumbnail
THUMBNAIL_WELCOME_USER=

# Trial user welcome thumbnail
THUMBNAIL_WELCOME_TRIAL=
